<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <record id="inherit_res_config_settings_view_form" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="sale.res_config_settings_view_form" />
      <field name="arch" type="xml">
        <xpath expr="//div[@id='sale_ebay']" position="after">
          <h2 class="mt32">Daily sale report</h2>
          <div class="row mt16 o_settings_container" id="daily_setting_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">

              </div>
              <div class="o_setting_right_pane">
                <label for="email_daily_report" style="padding-right: 20px"/>
                <field name="email_daily_report" />
                <div class="text-muted">
                  Email to send the daily report
                </div>
              </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>

  </data>
</odoo>