<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <template id="report_sale_scheduler_template" name="Daily Sale Report">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div style="text-align: center; padding: 10px;">
                    <h3>Daily report</h3>
                    <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')" />
                </div>
                <div class="row">
                    <div class="col-12">
                        <table class="table table-bordered w-100">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Turnover</th>
                                    <th>Cost</th>
                                    <th>Margin</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="values" t-as="val">
                                    <td>
                                        <t t-out="val.get('categ_id')[-1].split('/')[-1]" />
                                    </td>
                                    <td>
                                        <t t-out="val.get('price_total')"
                                            t-options="{'widget':'float', 'precision':2}" />
                                    </td>
                                    <td>
                                        <t t-out="val.get('purchase_price')"
                                            t-options='{"widget": "float", "precision":2}' />
                                    </td>
                                    <td>
                                        <t t-out="val.get('margin')"
                                            t-options='{"widget": "float", "precision":2}' />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td>
                                        <strong>
                                            <t t-out="total.get('turnover_total')"
                                                t-options='{"widget": "float", "precision":2}' />
                                        </strong>
                                    </td>
                                    <td>
                                        <strong>
                                            <t t-out="total.get('purchase_price_total')"
                                                t-options='{"widget": "float", "precision":2}' />
                                        </strong>
                                    </td>
                                    <td>
                                        <strong>
                                            <t t-out="total.get('margin_total')"
                                                t-options='{"widget": "float", "precision":2}' />
                                        </strong>
                                    </td>
                                </tr>

                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <record id="report_sale_scheduler" model="ir.actions.report">
        <field name="name">Sale report scheduler</field>
        <field name="model">sale.report.scheduler</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">qs_sale.report_sale_scheduler_template</field>
        <field name="report_file">qs_sale.report_sale_scheduler_template</field>
        <field name="print_report_name">'Sale report'</field>
        <field name="binding_model_id" ref="model_sale_report_scheduler" />
        <field name="binding_type">report</field>
    </record>
</odoo>