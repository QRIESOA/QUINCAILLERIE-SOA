<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_product_template_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.stock.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='qty_available']" position="replace">
                <field name="responsible_id" widget="many2one_avatar_user"/>
            </xpath>

            <xpath expr="//field[@name='responsible_id']" position="replace">
                <field name="qty_available" attrs="{'invisible':[('show_on_hand_qty_status_button', '=', False)]}" optional="show" decoration-danger="qty_available &lt; 0"/>
            </xpath>
        </field>
    </record>

</odoo>
